<div id="home">
  <div class="container">
    <div class="row" id="btns-login">
      <div class="col-sm-6 d-flex flex-row">
        <button type="button" class="btn col-md-4 col-sm-6 mt-5 ml-auto" id="btn-new-user" data-toggle="modal"
          data-target="#newUserModal">New User</button>
      </div>
      <div class="col-sm-6 d-flex flex-row">
        <button type="button" class="btn col-md-4 col-sm-6 mt-5 mr-auto" id="btn-login" data-toggle="modal"
          data-target="#loginModal">Login</button>
      </div>

    </div> {{!-- row div --}}
  </div> {{!-- container div --}}
</div> {{!-- home div --}}

<!-- New User Modal -->
<div class="modal fade" id="newUserModal" tabindex="-1" role="dialog" aria-labelledby="newUserModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newUserModalLabel">New User</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="name">Your Name:</label>
            <input type="text" id="new-name" class="form-control" aria-describedby="name" placeholder="Enter Name">
          </div>
          <div class="form-group">
            <label for="name">User Name</label>
            <input type="text" id="new-user-name" class="form-control" aria-describedby="name"
              placeholder="Enter User Name">
          </div>
          <div class="form-group">
            <label for="genderSelect">Select an Activity</label>
            <select class="form-control" id="genderSelect">
              <option>Male</option>
              <option>Female</option>
            </select>
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="new-password" class="form-control" aria-describedby="password"
              placeholder="Enter Password">
          </div>
          <div class="form-group">
            <label for="confirm-password">Re-enter Password</label>
            <input type="password" id="confirm-password" class="form-control" aria-describedby="confirm-password"
              placeholder="Confirm Password">
          </div>
          <div class="form-group">
            <label for="height">Height</label>
            <input type="text" id="height" class="form-control" aria-describedby="height"
              placeholder="Height">
          </div>
          <div class="form-group">
            <label for="current-weight">Current Weight</label>
            <input type="text" id="current-weight" class="form-control" aria-describedby="current-weight"
              placeholder="Current Weight">
          </div>
          <div class="form-group">
            <label for="goal-weight">Goal Weight</label>
            <input type="text" id="goal-weight" class="form-control" aria-describedby="goal-weight"
              placeholder="Goal Weight">
          </div>

          <button type="button" class="btn btn-primary" id="submit">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Login Modal -->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="loginModalLabel">Login</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="clearfix mb-4" method="POST" action="/login">
          <div class="form-group">
            <label for="name">User Name</label>
            <input name="username" type="text" id="name" class="form-control" aria-describedby="name" placeholder="Enter Name">
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input name="password" type="password" id="password" class="form-control" aria-describedby="password"
              placeholder="Enter Password">
          </div>
          <input type="submit" class="btn btn-primary" id="login"></button>
      </div>
    </div>
  </div>
</div>

